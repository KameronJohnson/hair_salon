<h1>Kameron's Hair Salon</h1>

<p>Add Stylist:</p>

<form action="/stylists" method="post">
  <label for="stylist_name">Stylist Name:</label>
  <input id="stylist_name" name="stylist_name" type="text">

  <button type="submit">Add Stylist!</button>
</form>

<% if @stylists.any?() %>
  <p>Click on a stylist to see his/her client list:</p>

  <ul>
    <% @stylists.each do |stylist| %>
      <li><a href="/stylists/<%= stylist.stylist_id() %>"><%= stylist.stylist_name() %></a></li>
    <% end %>
  </ul>
<% else %>
  <p>No stylists!</p>
<% end %>
